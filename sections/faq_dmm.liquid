{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="image-with-text image-with-text--{{ section.settings.content_layout }} page-width isolate">
  <div class="image-with-text__grid grid grid--gapless grid--1-col">
    <h2 id="SectionHeading-{{ section.id }}" class="blog__title title">
        <img src="{{ section.settings.image_box1 | img_url: 'master' }}" alt="{{ section.settings.image_box1.alt }}" class="pc">
        <img src="{{ section.settings.image_box2 | img_url: 'master' }}" alt="{{ section.settings.image_box2.alt }}" class="sp">
    </h2>
    <div class="image-with-text__text-item grid__item">
      <div id="ImageWithText--{{ section.id }}" class="image-with-text__content content-container">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'text' -%}
              <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
                  {{ block.settings.button_label | escape }}
                {% render 'icon-arrow_dmm' %}
                </a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "よくある質問",
  "class": "section_faq",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_box1",
      "label": "タイトル画像デスクトップ"
    },
    {
      "type": "image_picker",
      "id": "image_box2",
      "label": "タイトル画像モバイル"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "t:sections.image-with-text.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "よくある質問",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}


{% stylesheet %}
  .section_faq{
    background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/bg_night_61e2c46f-f6bb-4b16-9d62-db9c490cbb86.jpg?v=1662441359);
    background-size: cover;
    background-repeat: no-repeat;
    padding-bottom: 200px;
    position: relative;
    margin-top: 110px;
  }
  .section_faq::before{
    content: '';
    background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/bg_faq_sp.png?v=1662722124);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: bottom;
    width: 95%;
    max-width: 400px;
    height: 100%;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    z-index: 0;
  }
  .section_faq .image-with-text__content{
    background: transparent;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .section_faq .image-with-text__text{
    font-size: 1.4rem;
    margin-top: 1rem;
  }
  .section_faq h2.title{
        width: 200px;
        position: absolute;
        top: -13px;
        left: 50%;
        transform: translateX(-50%);
        -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
  }
  .section_faq a.button{
    background: white;
    border-radius: 50px;
    color: inherit;
    font-size: 1.6rem;
    margin-top: 1rem!important;
    max-width: 195px;
    min-height: 38px;
    width: 100%;
  }
  .section_faq a.button .icon{
      position: absolute;
      right: 15px;
  }
  .section_faq a.button::before,
  .section_faq a.button::after{
    content: none;
  }
  .section_faq .content-container{
    padding: 3rem 0 1rem;
    text-align: center;
  }
  .section_faq .content-container p{
    margin-bottom: 0;
  }
  @media screen and (min-width: 769px){
    .section_faq{
      margin-top: 115px;
      padding-bottom: 190px;
    }
    .section_faq h2.title{
        width: 100%;
        max-width: 270px;
        top: -20px;
    }
    .section_faq::before{
        content: '';
        background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/bg_faq_pc.png?v=1662722810);
        background-size: contain;
        background-repeat: no-repeat;
        background-position: bottom;
        width: 100%;
        max-width: 810px;
        height: 100%;
        position: absolute;
        bottom: 0;
        left: 51%;
        transform: translateX(-50%);
        -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
        z-index: 0;
    }
    .section_faq .content-container{
      padding: 5rem 7rem 7rem;
    }
    .section_faq .image-with-text__text{
      font-size: 1.8rem;
      margin: 0;
    }
    .section_faq a.button{
       min-width: 260px;
       min-height: 50px;
       margin-top: 2rem!important;
       font-size: 2rem;
    }
     .section_faq a.button:hover .icon{
      animation: arrowbefore .5s;
    }
  }
{% endstylesheet %}

