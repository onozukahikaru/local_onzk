    -ms-transform: translateX(-50%);
    bottom: 0;
    width: 210px;
    height: 130px;
  }
  .section_challenge .image-with-text__content{
    padding: 0;
    padding: 10px 25px 0px;
    max-width: 500px;
    margin: 0 auto;
  }
  .challenge_box .image-with-text__text p:nth-child(3){
