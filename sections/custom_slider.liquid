<section class="top_visual_wrap">
  <div class="top_visual_inner">
      <div class="slider">  
        　　　{% for block in section.blocks %} 
              <div><img src="{{block.settings.slide_img | img_url: '2000x' }}"></div>
            　{% endfor %}
      </div>
      <div class="top_visual_con">
          <div class="top_visual_img">
              <img src="{{section.settings.logo_img| img_url: '800x'}}">
          </div>
          <div class="top_visual_con_p">
          <p>{{section.settings.comment_p}}</p>
          </div>
          <a href="{{section.settings.btn_link}}" class="top_visual__button__wrap">
              <span class="top_visual__button">{{section.settings.btn_text}}</span>
          </a>
      </div>
  </div>
</section>

{% schema %}
  {
    "name": "Section name",
    "settings": [{
      "type":"image_picker",
      "id":"logo_img",
      "label":"タイトル"
    },
    {
      "type":"richtext",
      "id":"comment_p",
      "label":"一言コメント"
    },
    {
      "type":"url",
      "id":"btn_link",
      "label":"リンク先URL"
    },
    {
      "type":"text",
      "id":"btn_text",
      "label":"ボタンテキスト"
    }
    ],
    "blocks":[
    {
      "type":"image",
      "name":"スライドイメージ",
      "settings":[
        {
        "type":"image_picker",
        "id":"slide_img",
        "label":"スライド画像"
        }
        ]}],
    "presets":[
    {
      "name":"カスタムスライダー2",
      "category":"カスタムパーツ"
    }]
  }
{% endschema %}

{% stylesheet %}
.top_visual_wrap{
  width:100%;
  height:600px;
  overflow:hidden;
  position:relative;
}
.slick-slider {
  height: 600px;
}
img{
width:100%;
}
.slick-slide{
height:auto!important;
}
.slick-next{
  right:2%!important;
}
.slick-prev{
  left:2%!important;
}
.slick-arrow{
  width: initial!important;
  height: initial!important;
  z-index:2!important;
}
.slick-arrow:before{
  font-size: 30px!important;
}
.slider .slick-dots {
  position: absolute;
  top: 50%;
  left: 90%;
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 0;
  margin: 0;
  list-style: none;
  text-align: center;
}
.top_visual_con{
  position:absolute;
  left:10%;
  top: 50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
}
.top_visual_img{
  width:100%;
  text-align: center;

}
.top_visual_img img{
  width:60%;
  
}
.top_visual_con_p{
  padding-top:10px;
  padding-bottom:10px;
  display:block;
}
.top_visual_con p{
  display:inline-block;
  text-align: left;
  margin-left:auto;
  margin-right:auto;
  font-weight:bold;
  color:#fff;
}
.top_visual__button__wrap{
  display:inline-block;
  border-radius: 30px;
  padding:5px 30px;
  text-decoration: none;
  color:#000;
  background-color: #fff;
}
.slick-num {
  position: absolute;
  bottom: 5%;
  right: 5%;
  color:#999;
}
{% endstylesheet %}

{% javascript %}
  $(document).on('ready', function() {
  .slick({
      autoplay: true,  
      autoplaySpeed: 1000,
      speed: 1000, 
      dots: true,
      arrows: true, 
      infinite: true,
      pauseOnHover: false,
  })
});
{% endjavascript %}