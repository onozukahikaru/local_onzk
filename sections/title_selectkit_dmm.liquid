<div class="collection-hero collection-hero--with-image selectkit">
  <div class="collection-hero__inner">
    <div class="collection-hero__text-wrapper">
      <h1 class="pc">
        {{ section.settings.image_pc | image_url: width: 1500 | image_tag:
          alt: section.settings.image_pc.alt | escape
        }}
      </h1>
      <h1 class="sp">
        {{ section.settings.image_sp | image_url: width: 1500 | image_tag:
          alt: section.settings.image_sp.alt | escape
        }}
      </h1>
    </div>
  </div>
</div>
{% schema %}
 {
  "name": "検査キットを選ぶバナータイトル",
  "tag": "section",
  "class": "section_selectkit",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_pc",
      "label": "タイトル画像デスクトップ"
    },
    {
      "type": "image_picker",
      "id": "image_sp",
      "label": "タイトル画像モバイル"
    }
  ],
  "presets": [
    {
      "name": "タイトル検査キットを選ぶ",
      "category": "画像"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.section_selectkit{
    background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/bg_dot.jpg?v=1662973564)!important;
    background-size: 25px!important;
    padding-bottom: 45px;
    padding-top: 10px;
    position: relative;
    height: 270px;
}
.selectkit{
    background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/mvbg_sp.png?v=1665033611);
    background-size: cover;
    height: 300px;
    position: absolute;
    top: -93px;
    width: 100%;
}
.selectkit img{
    width: 100%;
    height: auto;
}
.selectkit .pc{
    display: none;
}
.selectkit .collection-hero__text-wrapper{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    width: 100%;
    max-width: 265px;
}
.selectkit .collection-hero__inner{
    position: absolute;
    height: 50px;
    margin-top: 20px;
    width: 100%;
    bottom: -30px;
 }
.collection-hero.collection-hero--with-image.selectkit::before{
    content: '';
    background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/mv_sp.png?v=1665033610);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: bottom center;
    display: block;
    width: 100%;
    max-width: 340px;
    margin-left: auto;
    margin-right: 7px;
    height: 100%;
}
.selectkit .collection-hero__inner:before{
    content: '';
    background: #fff8f6;
    width: 100%;
    height: 15px;
    position: absolute;
    z-index: 0;
    left: 0;
    bottom: 15px;
}
.collection .section .collection-hero__description{
    margin: 40px auto 0;
}
.collection .section{
    background: #fff8f6;
}
.collection h1.collection-hero__title{
    display: none;
}
.kit_intro{
    text-align: center;
}
.kit_intro p{
    margin: 0;
    line-height: 1.7;
}
.kit_intro .link_line{
    color: #01b901;
    text-decoration: none;
}
 @media screen and (min-width: 769px){
    .kit_intro .sp,
    .selectkit .sp{
      display: none;
    }
    .selectkit .pc{
      display: block;
    }
    .selectkit .collection-hero__text-wrapper{
      max-width: 460px;
      padding: 4rem 0;
      top: 22px;
    }
    .selectkit .collection-hero__inner{
        height: 78px;
        margin-top: 20px;
        margin-bottom: 30px;
     }
    .selectkit .collection-hero__inner:before{
        height: 20px;
        bottom: 50px;
    }
     .section_selectkit{
       background-size: 45px!important;
       height: 370px;
       width: 100vw;
       margin: 0 calc(50% - 50vw);
     }
    .section_selectkit .gradient{
       background: transparent;
       margin-bottom: 50px;
       margin-top: 20px;
    }
     .selectkit{
        background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/mvbg_pc.png?v=1665033612);
        background-size: cover;
        height: 450px;
        position: absolute;
        top: -135px;
        width: 100%;
     }
     .collection-hero.collection-hero--with-image.selectkit::before{
         content: '';
         background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/mv_pc_bcb093c4-178a-4454-9589-b911d77ed195.png?v=1665033611);
         background-size: contain;
        background-repeat: no-repeat;
        background-position: bottom center;
        display: block;
        width: 100%;
        max-width: 900px;
        height: 100%;
        position: absolute;
        bottom: 40px;
        left: 47%;
        transform: translateX(-50%);
        -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
     }
     .collection .section:first-of-type{
        border-radius: 10px 10px 0 0;
      }
      .collection .section:last-of-type{
        border-radius: 0 0 10px 10px;
      }
  }
{% endstylesheet %}

