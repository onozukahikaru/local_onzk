<div class="page-width">
  <div class="memo_inner">
      {{ section.settings.custom_liquid }}
  </div>
</div>
{% schema %}
 {
  "name": "商品説明の注意メモ",
  "class": "section_product_memo",
   "settings": [
   {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
    }
  ],
  "presets": [
   {
     "name": "商品説明の注意メモ",
     "category": "テキスト"
   }
 ]
}
{% endschema %}

{% stylesheet %}
.section_product_memo{
    font-size: 1.4rem;
}
.memo_inner{
  background: #fdebe5;
  border-radius: 10px;
  padding: 24px;
  margin-top: 60px;
  margin-bottom: 20px;
}
.section_product_memo .innerbox{
  margin-bottom: 40px;
  font-weight: 400;
}
.section_product_memo .memo01{
  padding: 0;
  list-style: none;
}
.section_product_memo .memo02{
  padding: 0;
  list-style: none;
  font-weight: 600;
}
.section_product_memo .memo03{
  
}
.section_product_memo .memo03 ol{
    list-style: none;
    padding: 0;
}
 .section_product_memo .memo03 a{
  color: #f48ebe;
}
.section_product_memo .memo04 h4{
    margin-bottom: 0;
}
.section_product_memo .memo04 ol{
    padding-left: 20px;
}
.section_product_memo .memo05{
  
}
.section_product_memo .memo05 dl{
    display: flex;
    flex-direction: column;
    font-size: 1.3rem;
}
.section_product_memo .memo05 dl dd{
  margin-left: 0;
}
@media screen and (min-width: 769px){
      .section_product_memo .memo05 dl{
          flex-direction: row;
          font-size: 1.3rem;
      }
      .section_product_memo .memo05 dl dd{
        margin-left: 20px;
      }
}
{% endstylesheet %}

