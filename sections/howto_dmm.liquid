{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="image-with-text image-with-text--{{ section.settings.content_layout }} isolate">
  <div class="image-with-text__grid">
    <h2 id="SectionHeading-{{ section.id }}" class="blog__title title">
        <img src="{{ section.settings.image_box1 | img_url: 'master' }}" alt="{{ section.settings.image_box1.alt }}" class="pc">
        <img src="{{ section.settings.image_box2 | img_url: 'master' }}" alt="{{ section.settings.image_box2.alt }}" class="sp">
    </h2>
    <div class="image-with-text__text-item">
      <div id="ImageWithText--{{ section.id }}" class="image-with-text__content content-container">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'text' -%}
              <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
                  {{ block.settings.button_label | escape }}
                  {% render 'icon-arrow-wh_dmm' %}
                </a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "検査キットの使い方",
  "class": "section_howto",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_box1",
      "label": "タイトル画像デスクトップ"
    },
    {
      "type": "image_picker",
      "id": "image_box2",
      "label": "タイトル画像モバイル"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "t:sections.image-with-text.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "検査キットの使い方"
    }
  ]
}
{% endschema %}


{% stylesheet %}
  .section_howto{
    background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/bg_howto_sp.png?v=1663735287);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    position: relative;
    margin: 120px auto 0;
    max-width: 350px;
    padding: 17px 0 45px;
  }
  .section_howto::before{
    content: '';
    background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/icon_howto.png?v=1663735284);
    background-size: contain;
    background-repeat: no-repeat;
    width: 215px;
    height: 87px;
    position: absolute;
    top: -45px;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    z-index: 2;
  }
  .section_howto .image-with-text__content{
    background: transparent;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .section_howto .image-with-text__text{
    font-size: 1.5rem;
    line-height: 1.5;
    padding: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .section_howto h2.title{
    max-width: 250px;
    margin: 0 auto;
    padding-top: 35px;
  }
  .section_howto a.button{
    background: #f48ebe;
    color: white;
    border: 5px solid white;
    border-radius: 50px;
    width: 100%;
    max-width: 215px;
    min-height: 45px;
    font-size: 1.5rem;
    margin-top: 2rem!important;
  }
  .section_howto a.button .icon{
      position: absolute;
      right: 15px;
    }
  .section_howto a.button::before,
  .section_howto a.button::after{
    content: none;
  }
  .section_howto .content-container{
    padding: 0;
    padding-top: 20px;
    text-align: center;
  }
  .section_howto .content-container p{
    margin-bottom: 0;
    background: white;
    margin: 2px 0;
    display: inline-block;
  }
  @media screen and (min-width: 769px){
    .section_howto{
        background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/bg_howto_pc.png?v=1663740975);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        max-width: 1150px;
        margin: 150px auto 0;
        position: relative;
        padding: 0;
        border: 4px solid white;
        border-radius: 20px;
    }
    .section_howto h2.title{
        max-width: 340px;
        padding-top: 75px;
    }
    .section_howto::before{
        content: '';
        background: url(https://cdn.shopify.com/s/files/1/0656/4688/7139/files/icon_howto.png?v=1663735284);
        background-size: contain;
        background-repeat: no-repeat;
        width: 280px;
        height: 115px;
        position: absolute;
        top: -60px;
        left: 50%;
        transform: translateX(-50%);
        -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
        z-index: 2;
    }
    .section_howto .image-with-text{
        border: 4px solid #f793cc;
        border-radius: 16px;
        padding-bottom: 45px;
    }
    .section_howto .image-with-text__text{
        padding: 0;
        flex-direction: row;
        flex-wrap: wrap;
        max-width: 450px;
        font-size: 1.8rem;
    }
    .section_howto .content-container p:nth-child(n+2):nth-child(-n+3){
      display: inline-block;
    }
    .section_howto .image-with-text__content{
        padding-top: 1rem;
    }
    .section_howto .image-with-text__content a.button{
       min-width: 260px;
       border: 4px solid white;
       font-size: 1.9rem;
       margin-top: 18px;
       height: 58px;
    }
    .section_howto a.button:hover .icon{
      animation: arrowbefore .5s;
    }
  }
{% endstylesheet %}

